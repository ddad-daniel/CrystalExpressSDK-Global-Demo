<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg" >

    <View
        android:id="@+id/view_empty"
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <RelativeLayout
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_empty"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical" >

        <Button
            android:id="@+id/loadAd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginbottom_ad_btn"
            android:layout_marginLeft="@dimen/marginleft_ad_btn"
            android:layout_marginRight="@dimen/marginright_ad_btn"
            android:layout_marginTop="@dimen/margintop_ad_btn"
            android:background="@drawable/btn_ad_effect"
            android:text="LoadAd"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/play"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginbottom_ad_btn"
            android:layout_marginLeft="@dimen/marginleft_ad_btn"
            android:layout_marginRight="@dimen/marginright_ad_btn"
            android:layout_marginTop="@dimen/margintop_ad_btn"
            android:background="@drawable/btn_ad_effect"
            android:text="PlayAd"
            android:textColor="@android:color/white" />

        <Button
            android:id="@+id/stop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginbottom_ad_btn"
            android:layout_marginLeft="@dimen/marginleft_ad_btn"
            android:layout_marginRight="@dimen/marginright_ad_btn"
            android:layout_marginTop="@dimen/margintop_ad_btn"
            android:background="@drawable/btn_ad_effect"
            android:text="StopAd"
            android:textColor="@android:color/white" />

        <CheckBox
            android:id="@+id/autoplay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Autoplay" />
    </LinearLayout>

</RelativeLayout>